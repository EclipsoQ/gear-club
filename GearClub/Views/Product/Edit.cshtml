@model GearClub.Presentation.CompositeModels.ProductViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    #preview {
        display: flex;
        flex-wrap: wrap;
        max-width: 100px;
        max-height: 100px;
        border: 1px solid black;
        margin: 5px;
    }

    .detail-preview {
        max-height: 100px;
        max-width: 100px;
        border: 1px solid black;
        margin-top: 5px;
        margin-right: 5px;
    }
</style>

<div class="container-fluid pt-4 px-4">
    <h2 class="text-uppercase">
        <span class="pr-3">Sản phẩm</span>
    </h2>
    <h4>
        <span class="pr-3">Thông tin chính</span>
    </h4>
    <hr />
    <div class="row g-4">
        <div class="bg-light rounded h-100 p-4">
            <form asp-action="Edit" class="col-md-6" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Product.ProductId" />
                <div class="form-group mb-3">
                    <label asp-for="Product.Name" class="control-label">Tên sản phẩm</label>
                    <textarea asp-for="Product.Name" class="form-control" style="height: auto;"></textarea>
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Product.Price" class="control-label">Đơn giá</label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Product.StockQuantity" class="control-label">Số lượng tồn kho</label>
                    <input asp-for="Product.StockQuantity" class="form-control" />
                    <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Product.Warranty" class="control-label">Bảo hành (tháng)</label>
                    <input asp-for="Product.Warranty" class="form-control" />
                    <span asp-validation-for="Product.Warranty" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Product.Description" class="control-label">Mô tả</label>
                    <textarea asp-for="Product.Description" class="form-control" style="height: 200px"></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Product.Brand" class="control-label">Hãng sản xuất</label>
                    <input asp-for="Product.Brand" class="form-control" />
                    <span asp-validation-for="Product.Brand" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Product.Model" class="control-label">Mẫu sản phẩm</label>
                    <input asp-for="Product.Model" class="form-control" />
                    <span asp-validation-for="Product.Model" class="text-danger"></span>
                </div>
                <div class="form-group mb-3" hidden>
                    <label asp-for="Product.Created_at" class="control-label"></label>
                    <input asp-for="Product.Created_at" class="form-control" />
                    <span asp-validation-for="Product.Created_at" class="text-danger"></span>
                </div>
                <div class="form-group mb-3" hidden>
                    <label asp-for="Product.Modified_at" class="control-label"></label>
                    <input asp-for="Product.Modified_at" class="form-control" />
                    <span asp-validation-for="Product.Modified_at" class="text-danger"></span>
                </div>
                <div class="form-group mb-3" hidden>
                    <label asp-for="Product.Deleted_at" class="control-label"></label>
                    <input asp-for="Product.Deleted_at" class="form-control" />
                    <span asp-validation-for="Product.Deleted_at" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Ảnh xem trước (cũ)</label> <br />
                    <img src="/img/ProductImages/PreviewImages/@Model.Product.ProductId/Preview.webp"
                         style="margin:5px; max-height:100px; max-width:100px" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PreviewImage" class="control-label">Ảnh xem trước (mới)</label>
                    <input asp-for="PreviewImage" class="form-control" type="file" />
                    <img id="preview" src="#" alt="" />
                    <span asp-validation-for="PreviewImage" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Ảnh chi tiết (cũ)</label>
                    <br />
                    @if (Model.Product.Images.Count == 0)
                    {
                        <p>Chưa có ảnh chi tiết</p>
                    } 
                    else
                    {
                        foreach (var image in Model.Product.Images)
                        {
                            <img src="@image.Link"
                                 width="100" height="100" class="border" />
                        }
                    }                    
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DetailImages" class="control-label">Ảnh chi tiết (mới)</label>
                    <input asp-for="DetailImages" multiple class="form-control" type="file" />
                    <div id="detailPreviews">
                    </div>
                    <span asp-validation-for="DetailImages" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Lưu" class="btn btn-primary" /> |
                    <a href="/Product/Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>

            
        </div>

    </div>
</div>

@section Scripts {    
    <script src="/js/product/edit.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}