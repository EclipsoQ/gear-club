@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <h2 class="text-uppercase">
        <span class="pr-3">Sản phẩm</span>
    </h2>
    <div>
        <a href="/Product/Create" class="btn btn-primary mb-2">Tạo mới</a>
    </div>
    <div class="row g-4">
        <div class="bg-light rounded h-100 p-4">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="col-md-5 align-middle">
                            Tên sản phẩm
                        </th>
                        <th>
                            Đơn giá
                        </th>
                        <th>
                            Số lượng
                        </th>
                        <th>
                            Bảo hành
                        </th>
                        <th>
                            Ảnh xem trước
                        </th>                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td >
                                @item.Name
                            </td>
                            <td>
                                @item.Price.ToString("###,###,###")₫
                            </td>
                            <td>
                                @item.StockQuantity
                            </td>
                            <td>
                                @item.Warranty tháng
                            </td>
                            <td align="center">
                                <img src="/img/ProductImages/PreviewImages/@item.ProductId/Preview.webp"
                                     width="50" height="50"/>
                            </td>                                                       
                            <td> 
                                <a asp-action="Edit" asp-route-id="@item.ProductId">Sửa</a> |
                                <a asp-action="ProductDetails" asp-route-id="@item.ProductId">Chi tiết</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

