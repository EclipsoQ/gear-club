@model GearClub.Presentation.CompositeModels.CartViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Tạm tính</th>
                        <th>Bỏ</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @if (Model.CartDetails.Count() != 0)
                    {
                        @foreach (var item in Model.CartDetails)
                        {
                            <partial name="/Views/Shared/PartialViews/_CartPartial.cshtml" model="@item" />
                        }
                    }
                    else
                    {
                        <partial name="PartialViews/_EmptyCartPartial.cshtml"/>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <form class="mb-30" action="">
                <div class="input-group">
                    <input type="text" class="form-control border-0 p-4" placeholder="Coupon Code">
                    <div class="input-group-append">
                        <button class="btn btn-primary">Apply Coupon</button>
                    </div>
                </div>
            </form>
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Cart Summary</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom pb-2">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Tạm tính</h6>
                        <h6 id="subtotal-all">@Model.Subtotals.ToString("###,###,###")₫</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Phí  vận chuyển</h6>
                        <h6 class="font-weight-medium" id="shipping-fee">@Model.ShippingFee.ToString("##,##0")₫</h6>
                    </div>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Tổng tiền</h5>
                        <h5 id="total">@Model.Total().ToString("###,###,###")₫</h5>
                    </div>
                    <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Thanh toán</button>
                </div>
            </div>
        </div>
    </div>
</div>


