@model GearClub.Presentation.CompositeModels.CartViewModel

@{
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
    IEnumerable<Address>? addresses = ViewData["Addresses"] as List<Address>;
    bool IsEmpty = Model.CartDetails.Count() == 0;
}

  
<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/Home/Index">Trang chủ</a>
                <a class="breadcrumb-item text-dark" href="/Product/ViewProducts">Mua sắm</a>
                <span class="breadcrumb-item active">Thanh toán</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Checkout Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Thông tin thanh toán</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="row">                                                
                    <div class="col-md-12 form-group">
                        <label>Chọn địa chỉ nhận hàng</label>
                        <select class="custom-select" id="addressSelector"> 
                            <option value="0" selected>---Chọn địa chỉ---</option>
                            @foreach (var address in addresses)
                            {
                                <option value="@address.AddressId">@address.ToString()</option>
                            }                                                           
                        </select>                            
                    </div>
                    <div class="col-md-12 form-group">                        
                        <div id="partialViewCont"></div>
                        <span class="text-danger" id="validateAddress"></span>
                    </div>                                                                                          
                </div>
            </div>
                
        </div>
        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Thông tin đơn</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom">
                    <h6 class="mb-3">Sản phẩm</h6>
                        
                    @foreach(var item in Model.CartDetails)
                    {
                        var value = item.Product.Price * item.Quantity;
                        <div class="d-flex justify-content-between">
                            <p>@item.Product.Name 
                                <br /> x @item.Quantity</p>                                
                            <p>@value.ToString("###,###,000")₫</p>
                        </div>
                    }

                </div>
                <div class="border-bottom pt-3 pb-2">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Tạm tính</h6>
                        <h6>@Model.Subtotals.ToString("###,###,000")₫</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Phí vận chuyển</h6>
                        <h6 class="font-weight-medium">@Model.ShippingFee.ToString("###,###,##0")₫</h6>
                    </div>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Thành tiền</h5>
                        <h5>@Model.Total().ToString("###,###,000")₫</h5>
                    </div>
                </div>
            </div>
            <div class="mb-5">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Phương thức thanh toán</span></h5>
                <div class="bg-light p-30">
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="paypal" value="paypal">
                            <label class="custom-control-label" for="paypal">Paypal</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="directcheck" value="cod">
                            <label class="custom-control-label" for="directcheck">COD</label>
                        </div>
                    </div>
                    <div class="form-group mb-4">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="banktransfer" value="banktransfer">
                            <label class="custom-control-label" for="banktransfer">Chuyển khoản</label>
                        </div>
                    </div>
                    <span class="text-danger" id="validatePayment"></span>
                    <button class="btn btn-block btn-primary font-weight-bold py-3" id="btnSubmit">Đặt hàng</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Checkout End -->
<!-- Form Handling Scripts-->


