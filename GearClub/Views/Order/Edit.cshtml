@model GearClub.Domain.Models.Order

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 class="mt-2 mx-2">Sửa</h3>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="OrderId" readonly/>
                    <div class="form-group mb-2">
                        <label asp-for="OrderDate" class="control-label">Ngày đặt</label>
                        <input asp-for="OrderDate" class="form-control" readonly/>
                        <span asp-validation-for="OrderDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Total" class="control-label">Tổng đơn</label>
                        <input asp-for="Total" class="form-control" readonly/>
                        <span asp-validation-for="Total" class="text-danger"></span>
                    </div>                                      
                    <div class="form-group mb-2" hidden>
                        <label class="control-label">Địa chỉ nhận hàng</label>
                        <input class="form-control" readonly />                       
                    </div>
                    <div class="form-group mb-2" hidden>
                        <label asp-for="AddressId" class="control-label"></label>
                        <input asp-for="AddressId" class="form-control"readonly/>
                        <span asp-validation-for="AddressId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Payment" class="control-label">Phương thức thanh toán</label>
                        <input asp-for="Payment" class="form-control" readonly/>
                        <span asp-validation-for="Payment" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-2 ">
                        <label asp-for="Status" class="control-label">Trạng thái</label>
                        <select asp-for="Status" class="form-control bg-white" asp-items="@ViewBag.Statuses"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2 form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsDelivered" /> Đã giao
                        </label>
                    </div>
                    <div class="form-group mb-2 form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsCheckedOut" /> Đã thanh toán
                        </label>
                    </div>
                    <div class="form-group mb-2">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Quay lại</a>
        </div>
    </div>
</div>


