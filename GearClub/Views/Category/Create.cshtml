@model GearClub.Presentation.CompositeModels.CategoryViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    #preview {
        display: flex;
        flex-wrap: wrap;
        max-width: 100px;
        max-height: 100px;
        border: 1px solid black;
        margin: 5px;
    }
</style>

<div class="container-fluid pt-4 px-4">
    <h2 class="text-uppercase">
        <span class="pr-3">Danh mục</span>
    </h2>
    <hr />
    <div class="row g">
        <div class="bg-light rounded h-100 p-4 col-md-6">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>                
                <div class="form-group mb-3">
                    <label asp-for="Category.Name" class="control-label">Tên danh mục</label>
                    <input asp-for="Category.Name" class="form-control" />
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3" hidden>
                    <label asp-for="Category.Created_at" class="control-label"></label>
                    <input asp-for="Category.Created_at" class="form-control" />
                    <span asp-validation-for="Category.Created_at" class="text-danger"></span>
                </div>
                <div class="form-group mb-3" hidden>
                    <label asp-for="Category.Modified_at" class="control-label"></label>
                    <input asp-for="Category.Modified_at" class="form-control" />
                    <span asp-validation-for="Category.Modified_at" class="text-danger"></span>
                </div>
                <div class="form-group mb-3" hidden>
                    <label asp-for="Category.Deleted_at" class="control-label"></label>
                    <input asp-for="Category.Deleted_at" class="form-control" />
                    <span asp-validation-for="Category.Deleted_at" class="text-danger"></span>
                </div>                
                <div class="form-group mb-3">
                    <label asp-for="PreviewImage" class="control-label">Ảnh xem trước (mới)</label>
                    <input asp-for="PreviewImage" class="form-control" type="file" />
                    <img id="preview" src="#" alt="" />
                    <span asp-validation-for="PreviewImage" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Save" class="btn btn-primary" value="Lưu" /> |
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/product/edit.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}