
@model Product

<div class="col-lg-4 col-md-6 col-sm-6 pb-1 product-card">
    <div class="product-item bg-light mb-4">
        <div class="product-img position-relative overflow-hidden">            
            <img class="img-fluid w-100" src="/img/ProductImages/PreviewImages/@Model.ProductId.ToString()/Preview.webp"
                 alt="@Model.Name">
            <div class="product-action">
                <a class="btn btn-outline-dark btn-square add-to-cart-btn" href="">
                    <input type="hidden" value="@Model.ProductId" class="product-id"/>
                    <i class="fa fa-shopping-cart"></i>
                </a>
                <a class="btn btn-outline-dark btn-square" href="#"><i class="far fa-heart"></i></a>
                <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i></a>
                <a class="btn btn-outline-dark btn-square" href="/Product/ProductDetails/@Model.ProductId">
                    <i class="fa fa-search"></i>
                </a>
            </div>
        </div>
        <div class="text-center py-4">
            <a class="h6 text-decoration-none text-wrap" href="/Product/ProductDetails/@Model.ProductId">@Model.Name</a>
            <div class="d-flex align-items-center justify-content-center mt-2">
                <h5>@Model.Price.ToString("##,000,000")₫</h5><h6 class="text-muted ml-2"></h6>
            </div>
            <div class="d-flex align-items-center justify-content-center mb-1">
                <small class="fa fa-star text-primary mr-1"></small>
                <small class="fa fa-star text-primary mr-1"></small>
                <small class="fa fa-star text-primary mr-1"></small>
                <small class="fa fa-star text-primary mr-1"></small>
                <small class="fa fa-star text-primary mr-1"></small>
                <small>(99)</small>
            </div>
        </div>
    </div>
</div>



