@model GearClub.Domain.Models.Address

@{
    ViewData["Title"] = "ClientEdit";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/Home/Index">Trang chủ</a>
                <a class="breadcrumb-item text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">Tài khoản</a>
                <span class="breadcrumb-item active">Sổ địa chỉ</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Content Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AddressId" />
                <div class="form-group">
                    <label asp-for="City" class="control-label">Tỉnh/Thành</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Province" class="control-label">Quận/Huyện</label>
                    <input asp-for="Province" class="form-control" />
                    <span asp-validation-for="Province" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ward" class="control-label">Phường/Xã</label>
                    <input asp-for="Ward" class="form-control" />
                    <span asp-validation-for="Ward" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Details" class="control-label">Địa chỉ cụ thể</label>
                    <input asp-for="Details" class="form-control" />
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Recipient" class="control-label">Họ tên người nhận</label>
                    <input asp-for="Recipient" class="form-control" />
                    <span asp-validation-for="Recipient" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="UserId" class="control-label"></label>
                    <input asp-for="UserId" class="form-control" value="@Model.UserId" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div>
            <a asp-action="Index">Quay lại</a>
        </div>
    </div>
    
</div>
<!-- Content End -->



