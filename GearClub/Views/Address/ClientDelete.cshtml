@model GearClub.Domain.Models.Address

@{
    ViewData["Title"] = "ClientDelete";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/Home/Index">Trang chủ</a>
                <a class="breadcrumb-item text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">Tài khoản</a>
                <span class="breadcrumb-item active">Sổ địa chỉ</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Content Start -->
<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class="bg-secondary pr-3">Địa chỉ</span>
    </h2>
    <div class="row px-xl-5">
        <div class="col-6">       
            <h5 class="mb-3">Bạn có chắc chắn muốn xóa địa chỉ này?</h5>
            <ul class="list-group list-group-flush mb-3">
                <li class="list-group-item">
                    <b>Họ tên: </b>@Model.Recipient
                </li>
                <li class="list-group-item">
                    <b>Số điện thoại:</b> @Model.PhoneNumber
                </li>
                <li class="list-group-item">
                    <b>Phường/Xã, Quận/Huyện, Tỉnh/Thành phố: </b>@Model.ToString()
                </li>
                <li class="list-group-item">
                    <b>Địa chỉ cụ thể: </b>@Model.Details
                </li>
            </ul>
               
            <form asp-action="DeleteConfirm">
                <input type="hidden" asp-for="AddressId"/>
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>        
    </div>
</div>
<!-- Content End -->

